<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - GPN Fuzz Brain</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("GPN Fuzz Brain", "Index", "Challenges", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul id="nav" class="nav navbar-nav">

                    @if (User.Identity.IsAuthenticated)
                    {
                        if (User.IsInRole("Admin"))
                        {
                            <li>
                                <a href="#">Employees</a>
                                <ul>
                                    <li>@Html.ActionLink("Get Employee List", "Index", "Employees")</li>
                                    <li>@Html.ActionLink("Add Employee", "Create", "Employees")</li>
                                </ul>
                            </li>
                            <li>
                                <a href="#">Departments</a>
                                <ul>
                                    <li>@Html.ActionLink("Get Department List", "Index", "Departments")</li>
                                    <li>@Html.ActionLink("Add Department", "Create", "Departments")</li>
                                </ul>
                            </li>
                            <li>
                                <a href="#">Teams</a>
                                <ul>
                                    <li>@Html.ActionLink("Get Team List", "Index", "Teams")</li>
                                    <li>@Html.ActionLink("Add Team", "Create", "Teams")</li>
                                </ul>
                            </li>
                            <li>
                                <a href="#">POC</a>
                                <ul>
                                    <li>@Html.ActionLink("Get POC List", "Index", "POCs")</li>
                                    <li>@Html.ActionLink("Add POC", "Create", "POCs")</li>
                                </ul>
                            </li>

                        }

                        if (User.IsInRole("User"))
                        {                            
                            <li>
                                <a href=@Html.ActionLink("Get POC List", "Index", "POCs")>POC</a>                                
                            </li>

                        }

                        <li><a>Hello - @User.Identity.Name</a></li>
                        <li>@Html.ActionLink("Logout", "Logout", "Accounts")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Login", "Login", "Accounts")</li>
                    }
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - GPN Fuzz Brain</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>