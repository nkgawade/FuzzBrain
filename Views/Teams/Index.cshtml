@model IEnumerable<FuzzBrain.Models.Team>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_FuzzBrainLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
